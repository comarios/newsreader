<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/habitonews_signup"
    android:orientation="vertical"
    android:scaleType="centerCrop">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ProgressBar
            android:id="@+id/progressBarQuestionnaire"
            style="@android:style/Widget.ProgressBar.Inverse"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:indeterminate="false"
            android:max="100"
            android:minHeight="50dp"
            android:minWidth="200dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtQuest1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/question1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/quest1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtQuest1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rectangle_shape_white"
            android:drawSelectorOnTop="true"
            android:ems="15"
            android:entries="@array/question1_answers"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/light_grey"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtQuest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quest1"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/question2"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/quest2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtQuest2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rectangle_shape_white"
            android:drawSelectorOnTop="true"
            android:ems="15"
            android:entries="@array/question2_answers"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/light_grey"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtQuest3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quest2"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/question3"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/quest3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtQuest3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rectangle_shape_white"
            android:drawSelectorOnTop="true"
            android:ems="15"
            android:entries="@array/question3_answers"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/light_grey"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtQuest4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quest3"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/question4"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/quest4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtQuest4"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rectangle_shape_white"
            android:drawSelectorOnTop="true"
            android:ems="15"
            android:entries="@array/question4_answers"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/light_grey"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtQuest5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quest4"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/question5"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/quest5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtQuest5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rectangle_shape_white"
            android:drawSelectorOnTop="true"
            android:ems="15"
            android:entries="@array/question5_answers"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/light_grey"
            android:textSize="12sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnQUestionnaireCancel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/btnQuestionnaireSubmit"
            android:layout_marginLeft="77dp"
            android:layout_marginStart="75dp"
            android:layout_toEndOf="@+id/progressBarQuestionnaire"
            android:background="@drawable/rectangle_shape_red"
            android:gravity="center"
            android:text="@string/cancel_registration"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnQuestionnaireSubmit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="39dp"
            android:layout_marginEnd="56dp"
            android:layout_marginLeft="47dp"
            android:background="@drawable/rectangle_shape_red"
            android:gravity="center"
            android:text="@string/submit_registration"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>
