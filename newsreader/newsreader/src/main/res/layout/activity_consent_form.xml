<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/habitonews_terms"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:scaleType="centerCrop">

    <ProgressBar
        android:id="@+id/progressBarConsentForm"
        style="@android:style/Widget.ProgressBar.Inverse"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtConsentForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="@string/consent_form_new"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnAgree"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/agree_consentform"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/rectangle_shape_red"
        android:layout_marginLeft="77dp"
        android:layout_marginStart="75dp"
        android:layout_alignTop="@+id/btnDontAgree"
        android:layout_toEndOf="@+id/progressBarConsentForm" />

    <Button
        android:id="@+id/btnDontAgree"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/notagree_consentform"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/rectangle_shape_red"
        android:layout_marginLeft="47dp"
        android:layout_marginBottom="39dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp" />

</RelativeLayout>